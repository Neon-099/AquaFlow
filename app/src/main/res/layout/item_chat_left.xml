<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <TextView
            android:id="@+id/tvMessageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:background="@drawable/bg_chat_receiver"
            android:padding="12dp"
            android:text="Sure! I've checked with the rider."
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tvTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:text="11:30 AM"
            android:textColor="#9E9E9E"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMessageLeft"
            app:layout_constraintEnd_toEndOf="@+id/tvMessageLeft" />

</androidx.constraintlayout.widget.ConstraintLayout>