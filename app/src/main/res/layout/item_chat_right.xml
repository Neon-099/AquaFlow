<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvMessageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:background="@drawable/bg_chat_sender"
        android:padding="12dp"
        android:text="Perfect, thank you!"
        android:textColor="@color/text_white"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        tools:text="Perfect, thank you!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimeRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="11:35 AM"
        android:textColor="@color/text_secondary"
        android:textSize="10sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toStartOf="@+id/tvMessageRight"
        app:layout_constraintTop_toBottomOf="@+id/tvMessageRight" />

</androidx.constraintlayout.widget.ConstraintLayout>
