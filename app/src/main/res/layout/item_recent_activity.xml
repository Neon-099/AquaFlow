<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="1dp"
    app:strokeColor="#E8ECF0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status Icon Container -->
        <View
            android:id="@+id/iconBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_light_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/ivActivityIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            app:tint="#4682B4"
            app:layout_constraintStart_toStartOf="@id/iconBackground"
            app:layout_constraintEnd_toEndOf="@id/iconBackground"
            app:layout_constraintTop_toTopOf="@id/iconBackground"
            app:layout_constraintBottom_toBottomOf="@id/iconBackground" />

        <!-- Activity Details -->
        <LinearLayout
            android:id="@+id/activityContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iconBackground"
            app:layout_constraintEnd_toStartOf="@id/chevronIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvRecentDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Order delivered successfully"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/tvRecentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="2 hours ago"
                android:textColor="#8A9BA8"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:id="@+id/chevronIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#C4CDD5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
