<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header Section with Gradient Background -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:text="Profile"
        android:textColor="@color/text_white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Edit Button -->
    <TextView
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="56dp"
        android:text="Edit"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:alpha="0.9"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- User Profile Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="-60dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        android:background="@drawable/bg_circle_white"
        app:shapeAppearanceOverlay="@drawable/circle_frame"
        app:strokeColor="@color/border_light"
        app:strokeWidth="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBg" />

    <!-- User Name -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        tools:text="John Doe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivUserProfile" />

    <!-- User Phone -->
    <TextView
        android:id="@+id/tvUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="+63000 000 0000"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />

    <!-- ScrollView for Options -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserPhone"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="20dp">

            <!-- Account Section Header -->
            <TextView
                android:id="@+id/tvAccountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:textAllCaps="true" />

            <!-- Account Options Container -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/surface_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Address Option -->
                    <include
                        layout="@layout/item_profile_option"
                        android:id="@+id/rowAddress"
                        android:layout_width="match_parent"
                        android:layout_height="64dp" />

                    <!-- Payment Option -->
                    <include
                        layout="@layout/item_profile_option"
                        android:id="@+id/rowPayment"
                        android:layout_width="match_parent"
                        android:layout_height="64dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Settings & Support Section Header -->
            <TextView
                android:id="@+id/tvSettingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="SETTINGS &amp; SUPPORT"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:textAllCaps="true" />

            <!-- Settings Options Container -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/surface_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Notification Option -->
                    <include
                        layout="@layout/item_profile_option"
                        android:id="@+id/rowNotification"
                        android:layout_width="match_parent"
                        android:layout_height="64dp" />

                    <!-- Help Option -->
                    <include
                        layout="@layout/item_profile_option"
                        android:id="@+id/rowHelp"
                        android:layout_width="match_parent"
                        android:layout_height="64dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/surface_white"
                android:text="Log Out"
                android:textColor="@color/error"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_logout"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconTint="@color/error"
                app:iconPadding="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/surface_white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
